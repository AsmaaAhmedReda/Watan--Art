@{
    Layout = "~/Views/Shared/_WebSiteLayout.cshtml";
    ViewBag.Title = "FAQ";
    var faqCount = 0;
}

<div class="page faq">
    <div class="container">
        <h3 class="page-title">@WatanART.Localization.Resource.FAQ</h3>
        <div id="accordion" role="tablist">
            @foreach (var item in ViewData["faq"] as List<WatanART.BLL.ViewModels.ModulesVM>)
            {
                var activeClass = "";
                var ariaExpand = "";
                var collapsed = "";
                var circle = "";
                if (faqCount == 0)
                {
                    activeClass = "show";
                    ariaExpand = "true";
                    collapsed = "";
                    circle = "fa-minus-circle";
                }
                else
                {
                    activeClass = "";
                    ariaExpand = "false";
                    collapsed = "collapsed";
                    circle = "fa-plus-circle";
                }
                <div class="card">
                    <div class="card-header" role="tab" id="heading_@item.ModuleID">
                        <h5 data-toggle="collapse" class="@collapsed" href="#@item.ModuleID" aria-expanded="@ariaExpand" aria-controls="collapse_@item.ModuleID">
                            <i class="more-less fa @circle"></i>
                           @item.Title
                        </h5>
                    </div>
                    <div id="@item.ModuleID" class="collapse @activeClass" role="tabpanel" aria-labelledby="heading_@item.ModuleID">
                        <div class="card-body">
                           @item.Descrption
                        </div>
                    </div>
                </div>
                faqCount++;
            }
        </div>
    </div>
</div>