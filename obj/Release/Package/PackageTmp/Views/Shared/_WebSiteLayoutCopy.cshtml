<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="">
    <title></title>
    <link href="~/layout/css/font-awesome.min.css" rel="stylesheet">
    <!-- Bootstrap core CSS -->
    <link href="~/layout/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="~/layout/css/style.css" rel="stylesheet">
    <link href="~/layout/css/responsive.css" rel="stylesheet">
    <link href="~/layout/css/rtl.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/layout/css/sliderstyle.css">


</head>
<body>
    <div class="modal fade" id="login-model" tabindex="-1" role="dialog" aria-labelledby="exampleModal3Label" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModal3Label">@WatanART.Localization.Resource.LogIn</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form role="form" method="POST" action="profile.html" class="login-form">
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="formGroupExampleInput">@WatanART.Localization.Resource.EMail</label>
                            <input type="email" class="form-control" id="Login_Email" placeholder="@WatanART.Localization.Resource.EMail">
                        </div>
                        <div class="form-group">
                            <label for="formGroupExampleInput2">@WatanART.Localization.Resource.Password</label>
                            <input type="password" class="form-control" id="Login_Password" placeholder="@WatanART.Localization.Resource.Password">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <div class="forget-password">
                            <a class="forgetpass-link">@WatanART.Localization.Resource.ForgetPassword</a>
                        </div>
                        <a class="btn btn-secondary" href="@Url.Action("register","Home")">@WatanART.Localization.Resource.newaccount</a>
                        <button type="button" onclick="login();" class="btn btn-primary">@WatanART.Localization.Resource.LogIn</button>
                    </div>
                </form>


                <form class="form-horizontal sign-up-form forget-pass-form" role="form" method="POST" action="/register">
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-3 field-label-responsive">
                                <label for="password">@WatanART.Localization.Resource.EMail</label>
                            </div>
                            <div class="col-md-9">
                                <div class="form-group">
                                    <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                                        <input type="email" name="password-confirmation" class="form-control" id="forgetpassword_Email" placeholder="example@yourmail.com" required>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3"></div>
                            <div class="col-md-6">
                                <button type="button" onclick="forgetPassword();" class="btn btn-secondary">@WatanART.Localization.Resource.send</button>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <a class="cancle btn btn-primary d-flex align-self-start">@WatanART.Localization.Resource.Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>


    <header class="fixed-top">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-5">
                    <div class="toggle-menu">
                        <i class="fa fa-bars" aria-hidden="true"></i>
                    </div>
                </div>
                <div class="col-md-2">
                    <a class="navbar-brand" href="#"><img src="~/layout/img/logo.png" /></a>
                </div>
                <div class="col-md-5 d-flex justify-content-end">
                    <div class="header-right">
                        @{
                            if (WatanART.Helpers.CultureHelper.CurrentCulture == 2)
                            {
                                <a href="/Home/ChangeCurrentCulture/1">
                                    <img src="~/layout/img/lang.png">
                                    <span>العربية</span>
                                </a>
                            }
                            else
                            {
                                <a href="/Home/ChangeCurrentCulture/2">
                                    <img src="~/layout/img/lang.png">
                                    <span>Language</span>
                                </a>
                            }
                        }

                    </div>

                    <div class="header-right">
                        <a href="javascript:void(0)" data-toggle="modal" id="btnlogin" style="display:inline;" data-target="#login-model"><i class="fa fa-user-circle-o" aria-hidden="true"></i><span>@WatanART.Localization.Resource.LogIn</span></a>
                        <a href="@Url.Action("Profile","Home")" id="profile" style="display:none;"><i class="fa fa-user-circle-o" aria-hidden="true"></i><span id="loggedname"></span></a>
                        
                        <span id="profileMenu" style="display:none;">  <i class="fa fa-angle-down account-dropdown-click" aria-hidden="true"></i></span>
                        <div class="account-dropdown">
                            <a class="dropdown-item" href="@Url.Action("Profile","Home")">@WatanART.Localization.Resource.Profile</a>
                            <a class="dropdown-item" href="@Url.Action("Makeorder","Home")">@WatanART.Localization.Resource.MakeOrder</a>
                            <a class="dropdown-item" href="@Url.Action("order_history","Home")">@WatanART.Localization.Resource.OrderHistory</a>
                            <a class="dropdown-item" href="@Url.Action("logOFF","Home")">@WatanART.Localization.Resource.LogOut</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <main role="main">
        <div class="side-menu">
            <div class="d-flex navbar-top align-items-center">
                <a class="navbar-brand" href="#"><img src="~/layout/img/logo-2.png"></a>
                <div class="toggle-menu">
                    <i class="fa fa-bars" aria-hidden="true"></i>
                </div>
            </div>
            <nav class="navbar navbar-expand-lg">
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item active">
                            <a class="nav-link" href="@Url.Action("index","Home")#myCarousel"><i class="fa fa-home"></i><span>@WatanART.Localization.Resource.Home</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("index","Home")#video"><i class="fa fa-play"></i><span>@WatanART.Localization.Resource.Video</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("index","Home")#shapes"><i class="fa fa-snowflake-o"></i><span>@WatanART.Localization.Resource.Shapes</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("index","Home")#features"><i class="fa fa-magic"></i><span>@WatanART.Localization.Resource.features</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("index","Home")#spec"><i class="fa fa-magic"></i><span>@WatanART.Localization.Resource.Spec</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("index","Home")#photos"><i class="fa fa-picture-o"></i><span>@WatanART.Localization.Resource.Photos</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("index","Home")#footer"><i class="fa fa-hand-o-right"></i><span>@WatanART.Localization.Resource.App</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#reviews"><i class="fa fa-link"></i><span>@WatanART.Localization.Resource.Reviews</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#footer"><i class="fa fa-headphones"></i><span>@WatanART.Localization.Resource.ContactUS</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("About","Home")"><i class="fa fa-info"></i><span>@WatanART.Localization.Resource.AboutUS</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("FAQ","Home")"><i class="fa fa-question"></i><span>@WatanART.Localization.Resource.FAQ</span></a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("logOFF","Home")"><i class="fa fa-question"></i><span>@WatanART.Localization.Resource.LogOut</span></a>
                        </li>
                        
                    </ul>
                </div>
            </nav>
        </div>
        <div class="auto-content">
            @RenderBody()
            <!-- FOOTER -->
            <footer id="footer">
                <div class="footer-top">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-5">
                                <div class="footer-block">
                                    <h3>@WatanART.Localization.Resource.ContactUS</h3>
                                    <form>
                                        <div class="form-group">
                                            <input type="email" class="form-control" id="Email" placeholder="@WatanART.Localization.Resource.EMail">
                                        </div>
                                        <div class="form-group">
                                            <input type="text" class="form-control" id="Subject" placeholder="@WatanART.Localization.Resource.subject">
                                        </div>
                                        <div class="form-group">
                                            <textarea class="form-control" id="Message" placeholder="@WatanART.Localization.Resource.Message"></textarea>
                                        </div>
                                        <button type="button" onclick="sendContactUsData();" class="btn btn-primary">@WatanART.Localization.Resource.send</button>
                                    </form>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="footer-block">
                                    <h3>Call Us</h3>
                                    <ul class="footer-nav list-unstyled">
                                        <li>
                                            <a href="#"><i class="fa fa-volume-control-phone"></i><span id="mobile"></span></a>
                                        </li>
                                        <li>
                                            <a href="#"><i class="fa fa-map-marker"></i><span id="address"></span></a>
                                        </li>
                                        <li>
                                            <a href="#"><i class="fa fa-globe"></i><span id="WebsiteLink"></span></a>
                                        </li>
                                    </ul>
                                    <ul id="socialmediaIcons" class="social-icons d-flex justify-content-center list-unstyled">
                                        @*<li>
                                            <a href=""><i class="fa fa-facebook"></i></a>
                                        </li>
                                        <li>
                                            <a href=""><i class="fa fa-twitter"></i></a>
                                        </li>
                                        <li>
                                            <a href=""><i class="fa fa-instagram"></i></a>
                                        </li>*@
                                    </ul>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="footer-block">
                                    <h3>App</h3>
                                    <ul class="footer-nav list-unstyled">
                                        <li>
                                            <a href="" id="AndriodAppUrl"><i class="fa fa-android"></i><span>Andriod</span></a>
                                        </li>
                                        <li>
                                            <a href="" id="IosAppUrl"><i class="fa fa-apple"></i><span>Apple ios</span></a>
                                        </li>
                                        @*<li>
                                            <a href=""><i class="fa fa-desktop"></i><span>Desktop  Web</span></a>
                                        </li>*@
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="footer-bottom">
                    <div class="container">
                        <p>CopyRight@2018</p>
                    </div>
                </div>
            </footer>
        </div>
    </main>
</body>


<script src="~/layout/js/jquery-3.1.1.min.js"></script>

<script src="~/layout/js/bootstrap.min.js"></script>
<script src="~/layout/js/popper.min.js"></script>
<script src="~/layout\js\scripts.js"></script>
<script src="~/layout\js\slider.jquery.js"></script>



@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")



<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.bundle.min.js"></script>
<script src="https://fengyuanchen.github.io/js/common.js"></script>
<script src="~/js/cropper.js"></script>
<script src="~/js/main.js"></script>
</html>
