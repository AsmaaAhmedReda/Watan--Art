                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                       
                        
                        
                        @if (ViewBag.vpcTxnResponseCode == "0" && ViewBag.vpc_Message == "Approved")
                        {

                            if (ViewBag.lang == 1)
                            {
                                   <p> تمت عمليه الدفع</p>
                            }
                            else
                            {
                                <p>
                                   Payment Done
                                </p>
                            }
                        }
                        else
                        {


                            if (ViewBag.lang == 1)
                            {
                                <p> حدث خطا</p>
                            }
                            else
                            {
                                <p>
                                    Payment Failed
                                </p>
                            }


                        }

                        @if (ViewBag.lang == 1)
                        {
                        <p> تفاصيل الطلب</p>
                        }
                        else
                        {
                        <p>
                            Order Detailes
                        </p>
                        }

                        

</header>
                    <!-- widget div-->
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body">
                            @if (Model != null && Model.Order != null && Model.Order.ID > 0)
                            {

                                <div class="row">
                                    <div class="col-xs-12">
                                        <p class="title-widget">تفاصيل الطلب</p>
                                    </div>
                                    <div class="col-sm-6 col-xs-12">
                                        <div class="block">
                                            <p><i class="fa fa-check" aria-hidden="true"></i><label>@WatanART.Localization.Resource.UserName :</label><span>@ViewBag.username</span></p>
                                        </div>
                                    </div>
                                    <div class="col-sm-6 col-xs-12">
                                        <div class="block">
                                            <p><i class="fa fa-check" aria-hidden="true"></i><label>@WatanART.Localization.Resource.PhoneNumber :</label><span>@ViewBag.userPhone</span></p>
                                        </div>
                                    </div>
                                    <div class="col-sm-6 col-xs-12">
                                        <div class="block">
                                            <p><i class="fa fa-check" aria-hidden="true"></i><label>@WatanART.Localization.Resource.country :</label><span>@ViewBag.country</span></p>
                                        </div>
