                                            <li class="list-group-item"><i class="fa fa-cubes" aria-hidden="true"></i><b>@WatanART.Localization.Resource.Quantity </b>:<span> @item.Quantiy</span></li>


                                        </ul>
                                    </div>
                                </div>
                            }

                        }

                    </div>
                </div>*@


                            }
                            else
                            {

                                if (ViewBag.lang == 1)
                                {
                                    <p>حدث خطا</p>
                                }
                                else
                                {
                                    <p>
                                        Error
                                    </p>
                                }



                            }



                        </div>

                        <!-- end widget content -->
                        <div class="text-center"><img src="../../assets/img/logo_web_1.png"></div>
                    </div>
                    <!-- end widget div -->

                </div>
                <!-- end widget -->
            </article>
            <!-- END COL -->
        </div>
        <!-- END ROW -->
    </section>
    <!-- end widget grid -->
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

















