</div>
<script type="text/javascript">
    // DO NOT REMOVE : GLOBAL FUNCTIONS!

    function Submit() {
        $('#frmForm').bootstrapValidator('validate');

        if ($('#frmForm').has('.has-error').length === 0) {
            submitInsert();
        } else {
            // alert("notvalid");
        }

    }







    function submitInsert() {
        debugger;

        var IntroTextar = $('#IntroTextar').val();
        var IntroTexten = $('#IntroTexten').val();
        



        var url = '@Url.Action("termsandconditionsajax", "Settings")';
        $.ajax({
            url: url,
            data: {
                IntroTextar: IntroTextar, IntroTexten: IntroTexten


                        },


            cache: false,
            type: "POST",
            success: function (data) {

                var dataRes = data;
                if (dataRes > 0) {


                    swal({
                        text: "@WatanART.Localization.Resource.DataSavedSuccessfully ",
                        //timer: 5000
                    }).then(
                       function () {
                           var href = "/Admin/Settings/termsandconditions";
                           window.location.href = href;

                       })


                } else {
                    swal("@WatanART.Localization.Resource.ErrorOccurred");
                }


            }
        });
        //}

    }








</script>



