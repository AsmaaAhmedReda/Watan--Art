@model  WatanART.BLL.ViewModels.ModulesVM
<div id="content">
    <!-- widget grid -->
    <section id="widget-grid" class="">
        <!-- START ROW -->
        <div class="row">
            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget" id="wid-id-4" data-widget-editbutton="false" data-widget-custombutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>@WatanART.Localization.Resource.AddEdit </h2>

                    </header>
                    <!-- widget div-->
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body">
                            @*<form id="smart-form-register" class="smart-form">*@
                            @using (Html.BeginForm("AddEdit", "Modules", FormMethod.Post, new
                            {
                                @class = "form-horizontal",
                                data_bv_message = "This value is not valid",
                                data_bv_feedbackicons_valid = "glyphicon glyphicon-ok",
                                data_bv_feedbackicons_invalid = "glyphicon glyphicon-remove",
                                data_bv_feedbackicons_validating = "glyphicon glyphicon-refresh",
                                role = "form",
                                enctype = "multipart/form-data",
                                id = "frmForm"
                            }))
                            {
                                <input type="hidden" id="ModuleID" name="ModuleID" value="@Model.ModuleID" class="formdata" />
                                <input type="hidden" id="ModuleCatID" name="ModuleCatID" value="@Model.ModuleCatID" class="formdata" />

                                <fieldset>


                                    <div class="form-group">



                                        @Html.LabelFor(m => m.ModuleTitleAr, new { @class = "col-lg-2 control-label" })
                                        <div class="col-lg-4">
                                            @Html.TextBoxFor(m => m.ModuleTitleAr, new
                                       {
                                           @class = "form-control",
                                           data_bv_notempty = "true",
                                           data_bv_notempty_message = @WatanART.Localization.Resource.Required,
                                           data_bv_stringlength = "true",
                                           data_bv_stringlength_min = "1",
                                           data_bv_stringlength_max = "100",
                                           data_bv_stringlength_message = @WatanART.Localization.Resource.StringLengthErrorMessage_100,
                                           placeholder = @WatanART.Localization.Resource.TitleAr
                                       })

                                            @Html.ValidationMessageFor(model => model.ModuleTitleAr, "", new { @class = "text-danger" })
                                        </div>

                                        @Html.LabelFor(m => m.ModuleTitleEn, new { @class = "col-lg-2 control-label" })
                                        <div class="col-lg-4">
                                            @Html.TextBoxFor(m => m.ModuleTitleEn, new
                                       {
                                           @class = "formdata form-control",
                                           data_bv_notempty = "true",
                                           data_bv_notempty_message = @WatanART.Localization.Resource.Required,
                                           data_bv_stringlength = "true",
                                           data_bv_stringlength_min = "1",
                                           data_bv_stringlength_max = "100",
                                           data_bv_stringlength_message = @WatanART.Localization.Resource.StringLengthErrorMessage_100,
                                           placeholder = @WatanART.Localization.Resource.TitleEn
                                       })

                                            @Html.ValidationMessageFor(model => model.ModuleTitleEn, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    

                                    <div class="form-group">
                                            @Html.LabelFor(m => m.ModuleDiscAr, new { @class = "col-lg-2 control-label" })
                                            <div class="col-lg-4">
                                                @Html.TextAreaFor(m => m.ModuleDiscAr, new
                                           {
                                               @class = "formdata  form-control",
                                               data_bv_notempty = "true",
                                               data_bv_notempty_message = @WatanART.Localization.Resource.Required,
                                               placeholder = @WatanART.Localization.Resource.DiscAr
                                           })
                                                @Html.ValidationMessageFor(model => model.ModuleDiscAr, "", new { @class = "text-danger" })
                                            </div>

                                            @Html.LabelFor(m => m.ModuleDiscEn, new { @class = "col-lg-2 control-label" })
                                            <div class="col-lg-4">
                                                @Html.TextAreaFor(m => m.ModuleDiscEn, new
                                           {
                                               @class = "formdata   form-control",
                                               data_bv_notempty = "true",
                                               data_bv_notempty_message = @WatanART.Localization.Resource.Required,
                                               placeholder = @WatanART.Localization.Resource.DiscEn
                                           })
                                                @Html.ValidationMessageFor(model => model.ModuleDiscEn, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        @*<div class="form-group">
                                            @Html.Label(WatanART.Localization.Resource.MainLink, new { @class = "col-lg-2 control-label" })
                                            <div class="col-lg-10">
                                                @Html.TextBoxFor(m => m.ModuleMainLink, new
                                           {
                                               @class = "formdata form-control",
                                               data_bv_notempty = "false",
                                               pattern = @"((www\.|(http|https|ftp|news|file|)+\:\/\/)?[&#95;.a-z0-9-]+\.[a-z0-9\/&#95;:@=.+?,##%&~-]*[^.|\'|\# |!|\(|?|,| |>|<|;|\)])",
                                               data_bv_regexp_message = @WatanART.Localization.Resource.ErrorMessageURL

                                           })

                                                @Html.ValidationMessageFor(model => model.ModuleMainLink, "", new { @class = "text-danger" })
                                            </div>

                                        </div>*@


                                    @*<div class="form-group">
                                        @Html.LabelFor(m => m.ModuleHintAr, new { @class = "col-lg-2 control-label" })
                                        <div class="col-lg-4">
                                            @Html.TextAreaFor(m => m.ModuleHintAr, new
                                       {
                                           @class = "formdata form-control",
                                           data_bv_notempty = "true",
                                           data_bv_notempty_message = @WatanART.Localization.Resource.Required,
                                           placeholder = @WatanART.Localization.Resource.HintAr
                                       })
                                            @Html.ValidationMessageFor(model => model.ModuleHintAr, "", new { @class = "text-danger" })
                                        </div>

                                        @Html.LabelFor(m => m.ModuleHintEn, new { @class = "col-lg-2 control-label" })
                                        <div class="col-lg-4">
                                            @Html.TextAreaFor(m => m.ModuleHintEn, new
                                       {
                                           @class = "formdata form-control",
                                           data_bv_notempty = "true",
                                           data_bv_notempty_message = @WatanART.Localization.Resource.Required,
                                           placeholder = @WatanART.Localization.Resource.HintEn
                                       })
                                            @Html.ValidationMessageFor(model => model.ModuleHintEn, "", new { @class = "text-danger" })
                                        </div>
                                    </div>*@

                                    <div class="form-group">
                                        @Html.LabelFor(m => m.ModuleIsActive, new { @class = "col-lg-2 control-label" })
                                        <div class="col-lg-4">
                                            <div class="checkbox">
                                                <label>
                                                    @*<input type="checkbox" id="IsActive" name="IsActive" class="checkbox style-0" checked="checked">*@

                                                    @if (Model.ModuleID == 0)
                                                    {
                                                        <input type="checkbox" id="ModuleIsActive" value="false" name="ModuleIsActive" class="checkbox isactivecclass style-1">

                                                    }
                                                    else
                                                    {
                                                        if (Model.ModuleIsActive)
                                                        {
                                                            <input type="checkbox" id="ModuleIsActive" value="true" name="ModuleIsActive" class="checkbox isactivecclass style-1" checked>
                                                        }
                                                        else
                                                        {
                                                            <input type="checkbox" id="ModuleIsActive" value="false" name="ModuleIsActive" class="checkbox isactivecclass style-1">
                                                        }
                                                    }
                                                    @*@Html.CheckBoxFor(model => model.ModuleIsActive, new
                                               {
                                                   htmlAttributes = new
                                                   {
                                                       @class = "checkbox isactivecclass style-1",
                                                       @checked = "checked"
                                                   }
                                               })*@
                                                    <span></span>
                                                </label>
                                            </div>
                                        </div>

                                    </div>
                                    @*@Html.Partial("ImageControlPV", ""+Model.ModuleImage+"", new ViewDataDictionary(this.ViewData) {   { "ID", "ModuleImage" } })*@




                                </fieldset>
                                @Html.Partial("ImageControlJS", (Model.ModuleImage == null ? "" : Model.ModuleImage.ToString()), new ViewDataDictionary(this.ViewData) { { "ID", "ModuleImage" }  })
                                @Html.Partial("ImageControlJS", (Model.ModuleMainLink == null ? "" : Model.ModuleMainLink.ToString()), new ViewDataDictionary(this.ViewData) { { "ID", "ModuleImage2" } })
                              
                                <div class="form-actions">
                                    <div class="row">
                                        <div class="col-md-2">
                                            <button type="button" onclick="Submit();" class="btn btn-primary" id="btnSubmit">
                                                <i class="fa fa-floppy-o"></i> @WatanART.Localization.Resource.BtnSave
                                            </button>
                                            @*<button type="submit" class="btn btn-primary" id="btnSubmit">
                                                    <i class="fa fa-floppy-o"></i> @WatanART.Localization.Resource.BtnSave
                                                </button>*@
                                        </div>
                                    </div>
                                </div>
                            }
                            @*</form>*@

                        </div>
                        <!-- end widget content -->

                    </div>
                    <!-- end widget div -->

                </div>
                <!-- end widget -->
            </article>
            <!-- END COL -->
        </div>
        <!-- END ROW -->
    </section>
    <!-- end widget grid -->
</div>