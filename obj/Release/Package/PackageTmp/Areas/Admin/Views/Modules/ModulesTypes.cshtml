@model IEnumerable<WatanART.BLL.ViewModels.ModulesCatagoryVM>

 

@{
    ViewBag.Title = WatanART.Localization.Resource.ModulesList;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div id="ribbon">
    <span class="ribbon-button-alignment">
        <span id="refresh" class="btn btn-ribbon" data-action="resetWidgets" data-title="refresh" rel="tooltip" data-placement="bottom" data-original-title="<i class='text-warning fa fa-warning'></i> Warning! This will reset all your widget settings." data-html="true">
            <i class="fa fa-refresh"></i>
        </span>
    </span>
    <!-- breadcrumb -->
    <ol class="breadcrumb">
        <li><a href="../../admin/Shared/Index">@WatanART.Localization.Resource.MenuHome</a></li>
        <li>@WatanART.Localization.Resource.Modules</li>
        <li>@WatanART.Localization.Resource.ModulesList</li>
    </ol>
</div>
<div id="content">

    <!-- widget grid -->
    <section id="widget-grid" class="">

        <!-- START ROW -->
        <div class="row">
            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-2" data-widget-editbutton="false">
             
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>@WatanART.Localization.Resource.ModulesList </h2>
                    </header>
                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->

                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body widget-body1">
                            <a href="@Url.Action("AddEditModuleType")" class="btn btn-labeled btn-primary"> <span class="btn-label"><i class="fa fa-plus-square-o"></i></span>@WatanART.Localization.Resource.AddNewRecord </a>
                        </div>
                        <div class="widget-body" id="divViewNewsTypes">

                            <table id="datatable_tabletools" class="table table-striped table-bordered table-hover" width="100%">
                                <thead>
                                    <tr class="header">
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="@WatanART.Localization.Resource.ID" />
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="@WatanART.Localization.Resource.ItemNameAr">
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="@WatanART.Localization.Resource.ItemName">
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="@WatanART.Localization.Resource.ItemImage" />
                                        </th>
                                        <th class="hasinput">
                                        </th>
                                    </tr>
                                    <tr class="header">
                                        <th data-class="expand">@Html.DisplayNameFor(model => model.CatagoryID)</th>
                                        <th data-hide="phone">@Html.DisplayNameFor(model => model.CatagoryNameAr)</th>
                                        <th data-hide="phone">@Html.DisplayNameFor(model => model.CatagoryNameEn)</th>
                                        <th data-hide="phone">@Html.DisplayNameFor(model => model.CatagoryLogo)</th>
                                        <th data-hide="phone">@WatanART.Localization.Resource.Operations</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var item in Model)
                                {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.CatagoryID)</td>
                                    <td>@Html.DisplayFor(modelItem => item.CatagoryNameAr)</td>
                                    <td>@Html.DisplayFor(modelItem => item.CatagoryNameEn)</td>
                                    <td>
                                        @Html.Partial("ImageDisplayPV", item.CatagoryLogo + "")
                                    </td>
                                    <td>
                                        <a href="@Url.Action("AddEditModuleType", new { id = item.CatagoryID})" class="btn btn-labeled btn-success"> <span class="btn-label"><i class="fa fa-edit"></i></span>@WatanART.Localization.Resource.Edit </a>
                                        <a href="javascript:void(0);" onclick="DeleteCatagoryItem(@item.CatagoryID,this);" class="btn btn-labeled btn-danger"> <span class="btn-label"><i class="fa fa-trash-o"></i></span>@WatanART.Localization.Resource.Delete </a>
                                    </td>
                                </tr>
                                }
                                </tbody>
                            </table>

                        </div>
                    <!-- end widget content -->
                </div>
                <!-- end widget div -->
        </div>
        <!-- end widget -->
        </article>
        <!-- END COL -->
</div>
<!-- END ROW -->
    </section>
<!-- end widget grid -->
</div>
<script>


    function DeleteCatagoryItem(ID, control) {

        var data = { 'ModulesID': ID };
        var url = "/admin/Modules/DeleteCatagory";
        General_DeleteItem(ID, control, data, url, "@WatanART.Localization.Resource.DeleteMessageConfirmation", "@WatanART.Localization.Resource.RecordDeletedSuccessfully", "@WatanART.Localization.Resource.ErrorOccurred");

    }
   

</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}




