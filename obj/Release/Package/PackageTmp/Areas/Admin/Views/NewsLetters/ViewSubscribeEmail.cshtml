@model IEnumerable<WatanART.BLL.ViewModels.NewsLetterEmailVM>

@{
    var Pageobj = ViewBag.PageObj as WatanART.BLL.ViewModels.PaggingVM;
    Pageobj = Pageobj == null ? new WatanART.BLL.ViewModels.PaggingVM() { CurrentPage = 1, TotalPages = 1 } : Pageobj;

    Pageobj.AjaxMetod = "ReloadTable(this)";
}
@if (Model != null && Model.Count() > 0)
{
<table id="datatable_tabletools" class="table table-striped table-bordered table-hover" width="100%">
    <thead>
        <tr class="header">
            <th class="hasinput">
                <input type="text" class="form-control" placeholder="@WatanART.Localization.Resource.ID" />
            </th>
            <th class="hasinput">
                <input type="text" class="form-control" placeholder="@WatanART.Localization.Resource.EMail">
            </th>
        </tr>
        <tr class="header">
            <th data-class="expand" width="10%">@Html.DisplayNameFor(model => model.EmailID)</th>
            <th data-hide="phone">@Html.DisplayNameFor(model => model.Email)</th>
           
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.EmailID)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
               
            </tr>
        }
    </tbody>
</table>
@Html.Partial("LazyPaggingPV")
}
else
{
<div> @WatanART.Localization.Resource.NoDataFound </div>
}