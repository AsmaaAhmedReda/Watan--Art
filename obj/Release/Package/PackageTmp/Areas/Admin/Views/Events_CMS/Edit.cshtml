
@model  WatanART.BLL.ViewModels.EventVM
@{

    if (Model.EventID > 0) {
        ViewBag.Title = WatanART.Localization.Resource.MenuEditEvent;
    }
    else
    {
        ViewBag.Title = WatanART.Localization.Resource.MenuAddEvent;
    }
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div id="ribbon">
    <span class="ribbon-button-alignment">
        <span id="refresh" class="btn btn-ribbon" data-action="resetWidgets" data-title="refresh" rel="tooltip" data-placement="bottom" data-original-title="<i class='text-warning fa fa-warning'></i> Warning! This will reset all your widget settings." data-html="true">
            <i class="fa fa-refresh"></i>
        </span>
    </span>
    <!-- breadcrumb -->
    <ol class="breadcrumb">
        <li><a href="../../admin/Shared/Index">@WatanART.Localization.Resource.MenuHome</a></li>
        <li><a href="@Url.Action("Index")">@WatanART.Localization.Resource.MenuEvents</a></li>
        <li>@ViewBag.Title </li>
    </ol>
</div>
<div id="content">

    <!-- widget grid -->
    <section id="widget-grid" class="">

        <!-- START ROW -->
        <div class="row">
            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-12">

                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-4" data-widget-editbutton="false" data-widget-custombutton="false">
                    <!-- widget options:
                        usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                        data-widget-colorbutton="false"
                        data-widget-editbutton="false"
                        data-widget-togglebutton="false"
                        data-widget-deletebutton="false"
                        data-widget-fullscreenbutton="false"
                        data-widget-custombutton="false"
                        data-widget-collapsed="true"
                        data-widget-sortable="false"

                    -->
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>@ViewBag.Title </h2>

                    </header>
                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->

                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body">

                            @*<form id="smart-form-register" class="smart-form">*@
                            @using (Html.BeginForm("Edit", "Events_CMS", FormMethod.Post, new
                            {
                                @class = "form-horizontal",
                                data_bv_message = "This value is not valid",
                                data_bv_feedbackicons_valid = "glyphicon glyphicon-ok",
                                data_bv_feedbackicons_invalid = "glyphicon glyphicon-remove",
                                data_bv_feedbackicons_validating = "glyphicon glyphicon-refresh",
                                role = "form",
                                enctype = "multipart/form-data",
                                id = "EventForm"
                            }))
                            {
                                @Html.AntiForgeryToken()

                                <fieldset>
                                    @Html.HiddenFor(model => model.EventID, new { htmlAttributes = new { @class = "form-control" } })
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.EventNameAR, new { @class = "col-lg-2 control-label" })
                                        <div class="col-lg-4">
                                            @Html.TextBoxFor(m => m.EventNameAR, new
                                       {
                                           @class = "form-control",
                                           data_bv_notempty = "true",
                                           data_bv_notempty_message = @WatanART.Localization.Resource.Required,
                                           data_bv_stringlength = "true",
                                           data_bv_stringlength_min = "1",
                                           data_bv_stringlength_max = "100",
                                           data_bv_stringlength_message = @WatanART.Localization.Resource.StringLengthErrorMessage_100,
                                           placeholder = @WatanART.Localization.Resource.EventNameAR
                                       })

                                            @Html.ValidationMessageFor(model => model.EventNameAR, "", new { @class = "text-danger" })
                                        </div>

                                        @Html.LabelFor(m => m.EventNameEN, new { @class = "col-lg-2 control-label" })
                                        <div class="col-lg-4">
                                            @Html.TextBoxFor(m => m.EventNameEN, new
                                       {
                                           @class = "form-control",
                                           data_bv_notempty = "true",
                                           data_bv_notempty_message = @WatanART.Localization.Resource.Required,
                                           data_bv_stringlength = "true",
                                           data_bv_stringlength_min = "1",
                                           data_bv_stringlength_max = "100",
                                           data_bv_stringlength_message = @WatanART.Localization.Resource.StringLengthErrorMessage_100,
                                           placeholder = @WatanART.Localization.Resource.EventNameEN
                                       })

                                            @Html.ValidationMessageFor(model => model.EventNameEN, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.EventPlaceAR, new { @class = "col-lg-2 control-label" })
                                        <div class="col-lg-4">
                                            @Html.TextBoxFor(m => m.EventPlaceAR, new
                                       {
                                           @class = "form-control",
                                           data_bv_notempty = "true",
                                           data_bv_notempty_message = @WatanART.Localization.Resource.Required,
                                           data_bv_stringlength = "true",
                                           data_bv_stringlength_min = "1",
                                           data_bv_stringlength_max = "100",
                                           data_bv_stringlength_message = @WatanART.Localization.Resource.StringLengthErrorMessage_100,
                                           placeholder = @WatanART.Localization.Resource.EventPlaceAR
                                       })

                                            @Html.ValidationMessageFor(model => model.EventPlaceAR, "", new { @class = "text-danger" })
                                        </div>

                                        @Html.LabelFor(m => m.EventPlaceEN, new { @class = "col-lg-2 control-label" })
                                        <div class="col-lg-4">
                                            @Html.TextBoxFor(m => m.EventPlaceEN, new
                                       {
                                           @class = "form-control",
                                           data_bv_notempty = "true",
                                           data_bv_notempty_message = @WatanART.Localization.Resource.Required,
                                           data_bv_stringlength = "true",
                                           data_bv_stringlength_min = "1",
                                           data_bv_stringlength_max = "100",
                                           data_bv_stringlength_message = @WatanART.Localization.Resource.StringLengthErrorMessage_100,
                                           placeholder = @WatanART.Localization.Resource.EventPlaceEN
                                       })

                                            @Html.ValidationMessageFor(model => model.EventPlaceEN, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Longtiude, new { @class = "col-lg-2 control-label" })
                                        <div class="col-lg-4">
                                            @Html.EditorFor(model => model.Longtiude, new
                                       {
                                           htmlAttributes = new
                                           {
                                               @class = "form-control",
                                               data_bv_notempty = "true",
                                               data_bv_notempty_message = @WatanART.Localization.Resource.Required,
                                               pattern = @"^(\+|-)?(?:180(?:(?:\.0{1,7})?)|(?:[0-9]|[1-9][0-9]|1[0-7][0-9])(?:(?:\.[0-9]{1,7})?))$",
                                               data_bv_regexp_message = @WatanART.Localization.Resource.ErrorMessageLongitude,
                                               placeholder = @WatanART.Localization.Resource.Longtiude
                                           }
                                       })

                                            @Html.ValidationMessageFor(model => model.Longtiude, "", new { @class = "text-danger" })
                                        </div>

                                        @Html.LabelFor(m => m.Latitude, new { @class = "col-lg-2 control-label" })
                                        <div class="col-lg-4">
                                            @Html.EditorFor(model => model.Latitude, new
                                       {
                                           htmlAttributes = new
                                           {
                                               @class = "form-control",
                                               data_bv_notempty = "true",
                                               data_bv_notempty_message = @WatanART.Localization.Resource.Required,
                                               pattern = @"^(\+|-)?(?:90(?:(?:\.0{1,7})?)|(?:[0-9]|[1-8][0-9])(?:(?:\.[0-9]{1,7})?))$",
                                               data_bv_regexp_message = @WatanART.Localization.Resource.ErrorMessageLatitude,
                                               placeholder = @WatanART.Localization.Resource.Latitude
                                           }
                                       })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.EventDescriptionAR, new { @class = "col-lg-2 control-label" })
                                        <div class="col-lg-4">
                                            @Html.TextAreaFor(m => m.EventDescriptionAR, new
                                       {
                                           @class = "form-control",
                                           data_bv_notempty = "true",
                                           data_bv_notempty_message = @WatanART.Localization.Resource.Required,
                                           placeholder = @WatanART.Localization.Resource.EventDescriptionAR
                                       })
                                            @Html.ValidationMessageFor(model => model.EventDescriptionAR, "", new { @class = "text-danger" })
                                        </div>

                                        @Html.LabelFor(m => m.EventDescriptionEN, new { @class = "col-lg-2 control-label" })
                                        <div class="col-lg-4">
                                            @Html.TextAreaFor(m => m.EventDescriptionEN, new
                                       {
                                           @class = "form-control",
                                           data_bv_notempty = "true",
                                           data_bv_notempty_message = @WatanART.Localization.Resource.Required,
                                           placeholder = @WatanART.Localization.Resource.EventDescriptionEN
                                       })
                                            @Html.ValidationMessageFor(model => model.EventDescriptionEN, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    @Html.Partial("ImageControlPV", "" + Model.EventImage + "", new ViewDataDictionary(this.ViewData) {  { "ID", "EventImage" } })


                                    <div class="form-group">
                                        @Html.LabelFor(m => m.EventStartDate, new { @class = "col-lg-2 control-label" })
                                        <div class="col-lg-4">
                                            <div class="input-group">
                                                @Html.EditorFor(model => model.EventStartDate, new
                                       {
                                           htmlAttributes = new
                                           {
                                               @class = "form-control datepicker",
                                               data_bv_notempty = "true",
                                               data_bv_notempty_message = @WatanART.Localization.Resource.Required,
                                               @readonly = "readonly",
                                               data_date_format = "yyyy-MM-dd",
                                               data_date_viewmode = "months",
                                               style = "font-family:Tahoma;background-color: #fff;color: #203040;",

                                           }
                                       })
                                                <span class="input-group-addon add-on"><span class="glyphicon glyphicon-calendar"></span></span>
                                            </div>
                                            @Html.ValidationMessageFor(model => model.EventStartDate, "", new { @class = "text-danger" })
                                        </div>

                                        @Html.LabelFor(m => m.EventStartDate, new { @class = "col-lg-2 control-label" })
                                        <div class="col-lg-4">
                                            <div class="input-group">
                                                @Html.EditorFor(model => model.EventEndDate, new
                                           {
                                               htmlAttributes = new
                                               {
                                                   @class = "form-control datepicker",
                                                   data_bv_notempty = "true",
                                                   data_bv_notempty_message = @WatanART.Localization.Resource.Required,
                                                   @readonly = "readonly",
                                                   data_date_format = "yyyy-MM-dd",
                                                   data_date_viewmode = "months",
                                                   style = "font-family:Tahoma;background-color: #fff;color: #203040;",

                                               }
                                           })
                                                <span class="input-group-addon add-on"><span class="glyphicon glyphicon-calendar"></span></span>
                                            </div>
                                            @Html.ValidationMessageFor(model => model.EventEndDate, "", new { @class = "text-danger" })
                                        </div>

                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.EventStartTime, new { @class = "col-lg-2 control-label" })
                                        <div class="col-lg-4">
                                            <div class="input-group">

                                                @Html.EditorFor(model => model.EventStartTime_Str, new
                                           {
                                               htmlAttributes = new
                                               {
                                                   @class = "form-control",
                                                   @readonly = "readonly",
                                                   style = "font-family:Tahoma;background-color: #fff;color: #203040;",
                                               }
                                           })
                                                <span class="input-group-addon">
                                                    <i class="fa fa-clock-o"></i>
                                                </span>
                                            </div>

                                        </div>

                                        @Html.LabelFor(m => m.EventEndTime, new { @class = "col-lg-2 control-label" })
                                        <div class="col-lg-4">
                                            <div class="input-group">

                                                @Html.EditorFor(model => model.EventEndTime_Str, new
                                           {
                                               htmlAttributes = new
                                               {
                                                   @class = "form-control",
                                                   @readonly = "readonly",
                                                   style = "font-family:Tahoma;background-color: #fff;color: #203040;",
                                               }
                                           })
                                                <span class="input-group-addon">
                                                    <i class="fa fa-clock-o"></i>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </fieldset>
                                <div class="form-actions">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <button type="submit" class="btn btn-primary">
                                                <i class="fa fa-floppy-o"></i> @WatanART.Localization.Resource.BtnSave
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            }
                            @*</form>*@
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->
            </article>
            <!-- END COL -->
        </div>
        <!-- END ROW -->
    </section>
    <!-- end widget grid -->
</div>
<script type="text/javascript">

    // DO NOT REMOVE : GLOBAL FUNCTIONS!

    $(document).ready(function () {
         

        $("#EventStartDate").datepicker($.extend({
            dateFormat: 'yy-mm-dd',
            onSelect: function () {
                var minDate = $(this).datepicker('getDate');
                //minDate.setDate(minDate.getDate() + 1);
                minDate.setDate(minDate.getDate());
                $("#EventEndDate").datepicker("option", "minDate", minDate);
            }
        }));
        $("#EventEndDate").datepicker($.extend({
            dateFormat: 'yy-mm-dd',
            onSelect: function () {
                var minDate = $(this).datepicker('getDate');
                //minDate.setDate(minDate.getDate() - 1);
                minDate.setDate(minDate.getDate());
                $("#EventStartDate").text(minDate);
                $("#EventStartDate").datepicker("option", "maxDate", minDate);
            }
        }, { minDate: 0 }));

        $('#EventStartTime_Str').timepicker();
        $('#EventEndTime_Str').timepicker();
    });
    $(document).on('submit', '#EventForm', function (e) {
        $('#EventForm').bootstrapValidator();
        //e.defaultPrevented();
    });
</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
