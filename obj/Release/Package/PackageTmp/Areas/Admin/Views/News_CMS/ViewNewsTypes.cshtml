@model IEnumerable<WatanART.BLL.ViewModels.NewsTypeVM>

@{
    var Pageobj = ViewBag.PageObj as WatanART.BLL.ViewModels.PaggingVM;
    Pageobj = Pageobj == null ? new WatanART.BLL.ViewModels.PaggingVM() { CurrentPage = 1, TotalPages = 1 } : Pageobj;

    Pageobj.AjaxMetod = "ReloadTable(this)";
}
@if (Model != null && Model.Count() > 0)
{
<table id="datatable_tabletools" class="table table-striped table-bordered table-hover" width="100%">
    <thead>
        <tr class="header">
            <th class="hasinput">
                <input type="text" class="form-control" placeholder="@WatanART.Localization.Resource.NewsTypeID" />
            </th>
            <th class="hasinput">
                <input type="text" class="form-control" placeholder="@WatanART.Localization.Resource.NewsTypeNameAR">
            </th>
            <th class="hasinput">
                <input type="text" class="form-control" placeholder="@WatanART.Localization.Resource.NewsTypeNameEN" />
            </th>
            <th class="hasinput">
            </th>
        </tr>
        <tr class="header">
            <th data-class="expand">@Html.DisplayNameFor(model => model.NewsTypeID)</th>
            <th data-hide="phone">@Html.DisplayNameFor(model => model.NameAR)</th>
            <th data-hide="phone">@Html.DisplayNameFor(model => model.NameEN)</th>
            <th data-hide="phone">@WatanART.Localization.Resource.Operations</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.NewsTypeID)</td>
                <td>@Html.DisplayFor(modelItem => item.NameAR)</td>
                <td>@Html.DisplayFor(modelItem => item.NameEN)</td>
                <td>
                    <a href="@Url.Action("EditNewsType", new { id = item.NewsTypeID})" class="btn btn-labeled btn-success"> <span class="btn-label"><i class="fa fa-edit"></i></span>@WatanART.Localization.Resource.Edit </a>
                    <a href="javascript:void(0);" onclick="DeleteItem(@item.NewsTypeID,this);" class="btn btn-labeled btn-danger"> <span class="btn-label"><i class="fa fa-trash-o"></i></span>@WatanART.Localization.Resource.Delete </a>
                </td>
            </tr>
        }
    </tbody>
</table>
@Html.Partial("LazyPaggingPV")

}
else
{
    <div> @WatanART.Localization.Resource.NoDataFound </div>
}