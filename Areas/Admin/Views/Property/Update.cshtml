                                        <div class="form-group">
                                            @Html.Label(WatanART.Localization.Resource.NameAr, new { @class = "col-lg-2 control-label" })

                                            <div class="col-lg-3">
                                                <input id = "txt_name_ar_0" name="txt_name_ar_0" type="text" class="form-control" placeholder="@WatanART.Localization.Resource.NameAr" />


                                            </div>

                                            @Html.Label(WatanART.Localization.Resource.NameEn, new { @class = "col-lg-2 control-label" })
                                            <div class="col-lg-3">
                                                <input id = "txt_name_en_0" name="txt_name_en_0" type="text" class="form-control" placeholder="@WatanART.Localization.Resource.NameEn" />
                                            </div>
                                            <div class="col-lg-2">
                                                <a class="btn btn-success btn-sm" style="font-size:15px;font-weight:bold;" onclick="AddOption('@WatanART.Localization.Resource.NameAr','@WatanART.Localization.Resource.NameEn');return false;">+</a>
                                                @*<a class="btn btn-danger btn-sm" style="font-size:15px;font-weight:bold;" onclick="RemoveOption('@WatanART.Localization.Resource.NameAr','@WatanART.Localization.Resource.NameEn');return false;">-</a>*@


                                            </div>

                                        </div>
                                        <div id="Div_options" name="Div_options">


                                        </div>

                                 





                             

                                <div class="form-actions">
                                    <div class="row">
                                        <div class="col-md-2">
                                            <button type="button" onclick="Submit();" class="btn btn-primary" id="btnSubmit">
                                                <i class="fa fa-floppy-o"></i> @WatanART.Localization.Resource.BtnSave
                                            </button>

                                        </div>
                                    </div>
                                </div>
                            }
                            @*</form>*@

                        </div>
                        <!-- end widget content -->

                    </div>
                    <!-- end widget div -->

                </div>
                <!-- end widget -->
            </article>
            <!-- END COL -->
        </div>
        <!-- END ROW -->
    </section>
    <!-- end widget grid -->
</div>
<script type="text/javascript">
    // DO NOT REMOVE : GLOBAL FUNCTIONS!

    //$(document).ready(function () {


    //    $(".SELECT2").select2();

    //});
    function AddOption(namear, nameen)
    {

        if ((namear == '' || namear == undefined) && (nameen == '' || nameen == undefined)) {

            namear = document.getElementById('hdn_namear').value;
            nameen = document.getElementById('hdn_nameen').value;
        }
        else {

            document.getElementById('hdn_namear').value = namear;
            document.getElementById('hdn_nameen').value = nameen;
        }

        var x = document.getElementById('hdn_count').value;

        var count = parseInt(x) + 1;
        document.getElementById('hdn_count').value = count;
        var Data = document.getElementById('Div_options').innerHTML
        +"<div class='form-group'>"
         + "<label class='col-lg-2 control-label' >"+namear+"</label>"

         +"<div class='col-lg-3'>"
         +" <input id='txt_name_ar_"+count+"' name='txt_name_ar_"+count+"' type='text' class='form-control' placeholder='"+namear+"' />"
         +"</div>"
            + "<label class='col-lg-2 control-label' >"+nameen+"</label>"
          +"<div class='col-lg-3'>"
          +" <input id='txt_name_en_"+count+"' name='txt_name_en_"+count+"' type='text' class='form-control' placeholder='"+nameen+"' />"
          +"</div>"
          +" <div class='col-lg-2'>"
          + "  <a  class='btn btn-success btn-sm' style='font-size:15px;font-weight:bold;'  onclick='AddOption();'>+</a>"
          //+ "&nbsp;<a class='btn btn-danger btn-sm' style='font-size:15px;font-weight:bold;'>-</a>"

          + "</div> </div>";
        document.getElementById('Div_options').innerHTML = Data;

    }


    function Submit() {
       
        $('#frmForm').bootstrapValidator('validate');
     
        if ($('#frmForm').has('.has-error').length === 0) {
           
            submitInsert();
        } else {
          
            
        }

    }




    function submitInsert() {
       



        var NameAR = $("#NameAR").val();
        var NameEN = $("#NameEN").val();
        var Prop_ID = $('#Prop_ID').val();
     
        var OptionsData="";
        var x = document.getElementById('hdn_count').value;
      
        var count = parseInt(x);
        debugger;
        for (var i = 0; i <= count; i++)
        {

            var optionar = document.getElementById("txt_name_ar_"+i.toString()).value;
            var optionen = document.getElementById("txt_name_en_" + i.toString()).value;
            
            if (i==0) {
                OptionsData = optionar + "&" + optionen + ",";

            }
            else
            {
                OptionsData += optionar + "&" + optionen + ",";

            }

        }
      
        var url = '@Url.Action("Updateajax", "Property")';
   
        $.ajax({
            url: url,
            data: {
                Prop_ID: Prop_ID, NameAR: NameAR, NameEN: NameEN, OptionsData: OptionsData
                  },


            cache: false,
            type: "POST",
            success: function (data) {

                var dataRes = data;
                if (dataRes > 0) {
                 

                    swal({
                        text: "@WatanART.Localization.Resource.DataSavedSuccessfully ",
                        //timer: 5000
                    }).then(
                       function () {
                           var href = "/Admin/Property/Index/@ViewBag.catID";
                           window.location.href = href;

                       })


                } else {
                    swal("@WatanART.Localization.Resource.ErrorOccurred");
                }


            }
        });
        //}

    }








</script>
