@model IEnumerable<WatanART.BLL.ViewModels.CareerVM>

@{
    var Pageobj = ViewBag.PageObj as WatanART.BLL.ViewModels.PaggingVM;
    Pageobj = Pageobj == null ? new WatanART.BLL.ViewModels.PaggingVM() { CurrentPage = 1, TotalPages = 1 } : Pageobj;

    Pageobj.AjaxMetod = "ReloadTable(this)";
}
@if (Model != null && Model.Count() > 0)
{
<table id="datatable_tabletools" class="table table-striped table-bordered table-hover" width="100%">
    <thead>
        <tr class="header">
            <th class="hasinput">
                <input type="text" class="form-control" placeholder="@WatanART.Localization.Resource.ID" />
            </th>
            <th class="hasinput">
                <input type="text" class="form-control" placeholder="@WatanART.Localization.Resource.CareerPosition">
            </th>
            <th class="hasinput">
                <input type="text" class="form-control" placeholder="@WatanART.Localization.Resource.WorkType" />
            </th>
            <th class="hasinput">
            </th>
            <th class="hasinput">
            </th>
        </tr>
        <tr class="header">
            <th data-class="expand" width="10%">@Html.DisplayNameFor(model => model.CareerID)</th>
            <th data-hide="phone">@Html.DisplayNameFor(model => model.CareerPosition)</th>
            <th data-hide="phone" width="10%">@Html.DisplayNameFor(model => model.WorkType)</th>
            <th data-hide="phone">@WatanART.Localization.Resource.Operations</th>
            <th data-hide="phone">@WatanART.Localization.Resource.Activate</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.CareerID)</td>
                <td>@Html.DisplayFor(modelItem => item.CareerPosition)</td>
                <td>@Html.DisplayFor(modelItem => item.WorkType)</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.CareerID })" class="btn btn-labeled btn-success"> <span class="btn-label"><i class="fa fa-edit"></i></span>@WatanART.Localization.Resource.Edit </a>
                    <a href="javascript:void(0);" onclick="DeleteItem(@item.CareerID,this);" class="btn btn-labeled btn-danger"> <span class="btn-label"><i class="fa fa-trash-o"></i></span>@WatanART.Localization.Resource.Delete </a>

                    <a href="@Url.Action("CareersApplicants", new { id = item.CareerID })"  class="btn btn-labeled btn-success"> <span class="btn-label"><i class="fa fa-edit"></i></span>@WatanART.Localization.Resource.MenuCareersApplicants</a>
                </td>

                <td>
                    @Html.CheckBoxFor(modelItem => item.IsActive, new { @onchange = "ActiveDective(" + @item.CareerID + ",this)" })
                </td>
            </tr>
        }
    </tbody>
</table> 
   @Html.Partial("LazyPaggingPV")

}
else
{
<div> @WatanART.Localization.Resource.NoDataFound </div>
}
     

