
@model IEnumerable<WatanART.BLL.ViewModels.CategoryVM>
@{
    var Pageobj = ViewBag.PageObj as WatanART.BLL.ViewModels.PaggingVM;
    Pageobj = Pageobj == null ? new WatanART.BLL.ViewModels.PaggingVM() { CurrentPage = 1, TotalPages = 1 } : Pageobj;
    Pageobj.AjaxMetod = "ReloadTable(this)";


    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int I = 1;
}

<div id="ribbon">
    <span class="ribbon-button-alignment">
        <span id="refresh" class="btn btn-ribbon" data-action="resetWidgets" data-title="refresh" rel="tooltip" data-placement="bottom" data-original-title="<i class='text-warning fa fa-warning'></i> Warning! This will reset all your widget settings." data-html="true">
            <i class="fa fa-refresh"></i>
        </span>
    </span>
    <!-- breadcrumb -->
    <ol class="breadcrumb">
        <li><a href="../../admin/Shared/Index">@WatanART.Localization.Resource.MenuHome</a></li>
        <li>@WatanART.Localization.Resource.CategoryList</li>
    </ol>
</div>
<div id="content">

    <!-- widget grid -->
    <section id="widget-grid" class="">

        <!-- START ROW -->
        <div class="row">
            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-2" data-widget-editbutton="false">
                  
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>@WatanART.Localization.Resource.MenuCategory </h2>
                    </header>
                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->

                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body widget-body1">
                            <a href="@Url.Action("New")" class="btn btn-labeled btn-primary"> <span class="btn-label"><i class="fa fa-plus-square-o"></i></span>@WatanART.Localization.Resource.AddCategory </a>
                        </div>
                        <div class="widget-body">
                            @if (Model != null && Model.Count() > 0)
                            {
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="btn-group">
                                            @*<button id="sample_editable_1_new" class="btn sbold green">
                                                Add New*@


                                            @*</button>*@
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="btn-group pull-right">
                                            <button class="btn green  btn-outline dropdown-toggle" data-toggle="dropdown">
                                                Tools
                                                <i class="fa fa-angle-down"></i>
                                            </button>

                                            <ul class="dropdown-menu pull-right" id="sample_3_tools">
                                                <li>
                                                    <a href="javascript:;" data-action="0" class="tool-action">
                                                        <i class="icon-printer"></i> Print
                                                    </a>
                                                </li>

                                                <li>
                                                    <a href="javascript:;" data-action="2" class="tool-action">
                                                        <i class="icon-doc"></i> PDF
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="javascript:;" data-action="3" class="tool-action">
                                                        <i class="icon-paper-clip"></i> Excel
                                                    </a>
                                                </li>



                                            </ul>

                                        </div>
                                    </div>
                                </div>
                                //id = "datatable_tabletoolsNew"
                                <table  class="table table-striped table-bordered table-hover" width="100%">
                                
                                    
                                     <thead>
                                     
                                        <tr class="header">
                                            <th data-class="expand">#</th>
                                            <th data-hide="expand">@WatanART.Localization.Resource.Image</th>
                                            <th data-hide="expand">@WatanART.Localization.Resource.NameAr</th>
                                            <th data-hide="expand">@WatanART.Localization.Resource.NameEn</th>
                                            <th data-hide="expand">@WatanART.Localization.Resource.CategoryMain</th>
                                       
                                            <th data-hide="expand"></th>
                                        </tr>
                                    </thead>

                                    <tbody>


                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@I</td>
                                                <td>
                                                    @Html.Partial("ImageDisplayPV", item.Image + "")
                                                </td>
                                                <td>@Html.DisplayFor(modelItem => item.NameAR)</td>
                                                <td>@Html.DisplayFor(modelItem => item.NameEN)</td>
                                                <td> 
                                                    @if (item.parent ==0)
	                                            {
		                                           @WatanART.Localization.Resource.CategoryMain
                                                }
                                                else
                                                {
                                                        @item.ParentName

                                                }
                                                </td>


                                                <td>
                                                    <a href="@Url.Action("Update", new { id = item.Cat_ID})" class="btn btn-labeled btn-success"> <span class="btn-label"><i class="fa fa-edit"></i></span>@WatanART.Localization.Resource.Edit </a>
                                                    <a href="javascript:void(0);" onclick="DeleteItem(@item.Cat_ID,this);" class="btn btn-labeled btn-danger"> <span class="btn-label"><i class="fa fa-trash-o"></i></span>@WatanART.Localization.Resource.Delete </a>
                                                </td>

                                            </tr>
                                            I++;
                                        }
                                    </tbody>
                                </table>




                            }
                            else
                            {
                                <div> @WatanART.Localization.Resource.NoDataFound </div>
                            }
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->
            </article>
            <!-- END COL -->
        </div>
        <!-- END ROW -->
    </section>
    <!-- end widget grid -->
</div>
<script type="text/javascript">
    function ReloadTable(e) {

        var catID = $("#CatID").val();

        General_ReloadTable(e, "/Admin/Category/ViewModules?CurrentPage=", "&catID=" + catID);

    }
    function DeleteItem(ID, control) {
        var url = "/admin/Category/Delete";
        var data = { 'ID': ID };
        General_DeleteItemnew(ID, control, data, url, "@WatanART.Localization.Resource.DeleteMessageConfirmation", "@WatanART.Localization.Resource.RecordDeletedSuccessfully", "@WatanART.Localization.Resource.ErrorOccurred");

    }

</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

