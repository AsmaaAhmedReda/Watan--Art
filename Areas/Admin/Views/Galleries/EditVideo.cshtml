
@model  WatanART.BLL.ViewModels.AlbumGalleryVM
@{if (Model.MediaID == 0)
    { ViewBag.Title = WatanART.Localization.Resource.MenuAddVideo; }
    else
    { ViewBag.Title = WatanART.Localization.Resource.MenuEditVideo; }
    WatanART.BLL.BussinessLayer.Generic _Generic = new WatanART.BLL.BussinessLayer.Generic();
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var AttachedFile = "";
    if (Model.MediaID > 0) {
        AttachedFile= Model.IsYoutube ? Model.AttachedFile : _Generic.GetFilePath("UploadedImages", Model.AttachedFile);
    }
    else
    {
        AttachedFile = _Generic.GetFilePath("UploadedImages", "No_image_available.jpg");
    }
}

<div id="ribbon">
    <span class="ribbon-button-alignment">
        <span id="refresh" class="btn btn-ribbon" data-action="resetWidgets" data-title="refresh" rel="tooltip" data-placement="bottom" data-original-title="<i class='text-warning fa fa-warning'></i> Warning! This will reset all your widget settings." data-html="true">
            <i class="fa fa-refresh"></i>
        </span>
    </span>
    <!-- breadcrumb -->
    <ol class="breadcrumb">
        <li><a href="../../admin/Shared/Index">@WatanART.Localization.Resource.MenuHome</a></li>
        <li><a href="@Url.Action("Videos")">@WatanART.Localization.Resource.MenuVideos</a></li>
        <li>@ViewBag.Title</li>
    </ol>
</div>
<div id="content">

    <!-- widget grid -->
    <section id="widget-grid" class="">

        <!-- START ROW -->
        <div class="row">
            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-12">

                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-4" data-widget-editbutton="false" data-widget-custombutton="false">
                    <!-- widget options:
                        usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                        data-widget-colorbutton="false"
                        data-widget-editbutton="false"
                        data-widget-togglebutton="false"
                        data-widget-deletebutton="false"
                        data-widget-fullscreenbutton="false"
                        data-widget-custombutton="false"
                        data-widget-collapsed="true"
                        data-widget-sortable="false"

                    -->
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>@ViewBag.Title </h2>

                    </header>
                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->

                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body">

                            @*<form id="smart-form-register" class="smart-form">*@
                            @using (Html.BeginForm("EditVideo", "Galleries", FormMethod.Post, new
                            {
                                @class = "form-horizontal",
                                data_bv_message = "This value is not valid",
                                data_bv_feedbackicons_valid = "glyphicon glyphicon-ok",
                                data_bv_feedbackicons_invalid = "glyphicon glyphicon-remove",
                                data_bv_feedbackicons_validating = "glyphicon glyphicon-refresh",
                                role = "form",
                                enctype = "multipart/form-data",
                                id = "VideoForm"
                            }))
                            {
                                @Html.AntiForgeryToken()

                                <fieldset>
                                    @Html.HiddenFor(model => model.MediaID, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.HiddenFor(model => model.AttachedFile, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.HiddenFor(model => model.ThumbFile, new { htmlAttributes = new { @class = "form-control" } })

                                    <div class="form-group">
                                        @Html.LabelFor(m => m.IsYoutube, new { @class = "col-lg-2 control-label" })
                                        <div class="col-lg-4">
                                            <div class="checkbox">
                                                <label>
                                                    @*<input type="checkbox" id="IsActive" name="IsActive" class="checkbox style-0" checked="checked">*@
                                                    @Html.CheckBoxFor(model => model.IsYoutube, new
                                               {
                                                   htmlAttributes = new
                                                   {
                                                       @class = "checkbox style-1",
                                                   }
                                               })
                                                    <span></span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.DescriptionAR, new { @class = "col-lg-2 control-label" })
                                        <div class="col-lg-4">
                                            @Html.TextAreaFor(m => m.DescriptionAR, new
                                       {
                                           @class = "form-control",
                                           data_bv_notempty = "true",
                                           data_bv_notempty_message = @WatanART.Localization.Resource.Required,
                                           placeholder = @WatanART.Localization.Resource.AlbumDescriptionAR
                                       })
                                            @Html.ValidationMessageFor(model => model.DescriptionAR, "", new { @class = "text-danger" })
                                        </div>

                                        @Html.LabelFor(m => m.DescriptionEN, new { @class = "col-lg-2 control-label" })
                                        <div class="col-lg-4">
                                            @Html.TextAreaFor(m => m.DescriptionEN, new
                                       {
                                           @class = "form-control",
                                           data_bv_notempty = "true",
                                           data_bv_notempty_message = @WatanART.Localization.Resource.Required,
                                           placeholder = @WatanART.Localization.Resource.AlbumDescriptionEN
                                       })
                                            @Html.ValidationMessageFor(model => model.DescriptionEN, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    @{
                                        if (Convert.ToBoolean(WatanART.Helpers.CultureHelper.Settings.Where(obj => obj.SettingID == (int)WatanART.BLL.ViewModels.SettingEnum.AllowAlbums).SingleOrDefault().SettingValue))
                                        {
                                            <div class="form-group">
                                                @Html.LabelFor(m => m.AlbumID, new { @class = "col-lg-2 control-label" })
                                                <div class="col-lg-4">
                                                    @Html.DropDownListFor(model => model.AlbumID, (IEnumerable<SelectListItem>)ViewData["Albums"], @WatanART.Localization.Resource.Select,
                                                       new
                                                       {
                                                           @class = "select2",
                                                           data_bv_notempty = "true",
                                                           data_bv_notempty_message = @WatanART.Localization.Resource.Required,
                                                       })
                                                </div>
                                            </div>
                                        }
                                    }
                                    <div id="SelectVideoFile">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.AttachedFile, new { @class = "col-lg-2 control-label" })
                                            <div class="col-lg-10">
                                                @Html.EditorFor(model => model.AttachedFile, new
                                           {
                                               htmlAttributes = new
                                               {
                                                   @class = "form-control",
                                                   type = "file",
                                                   accept = "video/mp4,video/mov",
                                                   title = @WatanART.Localization.Resource.Select_Image
                                               }
                                           })
                                                @Html.ValidationMessageFor(model => model.AttachedFile, "", new { @class = "text-danger" })
                                            </div>

                                        </div>
                                    </div>
                                    <div id="VideoURL">
                                        <div class="form-group">
                                            @Html.Label(WatanART.Localization.Resource.VideoURL, new { @class = "col-lg-2 control-label" })
                                            <div class="col-lg-10">
                                                @Html.TextBoxFor(m => m.YoutubeURL, new
                                           {
                                               @class = "form-control",
                                               data_bv_notempty = "true",
                                               pattern = @"((www\.|(http|https|ftp|news|file|)+\:\/\/)?[&#95;.a-z0-9-]+\.[a-z0-9\/&#95;:@=.+?,##%&~-]*[^.|\'|\# |!|\(|?|,| |>|<|;|\)])",
                                               data_bv_regexp_message = @WatanART.Localization.Resource.ErrorMessageURL,
                                           })

                                                @Html.ValidationMessageFor(model => model.YoutubeURL, "", new { @class = "text-danger" })
                                            </div>

                                        </div>
                                    </div>


                                    <div class="form-group" id="youtubeBox">
                                        <div class="col-lg-offset-3 col-lg-6">
                                            <iframe width="550" height="300" src="@AttachedFile" data-src="@AttachedFile" frameborder="0" allowfullscreen></iframe>
                                        </div>
                                    </div>
                                </fieldset>

                                <div class="form-actions">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <button type="submit" class="btn btn-primary">
                                                <i class="fa fa-floppy-o"></i> @WatanART.Localization.Resource.BtnSave
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                        }
                            @*</form>*@

                        </div>
                        <!-- end widget content -->

                    </div>
                    <!-- end widget div -->

                </div>
                <!-- end widget -->
            </article>
            <!-- END COL -->
        </div>
        <!-- END ROW -->
    </section>
    <!-- end widget grid -->
</div>
<script type="text/javascript">

    // DO NOT REMOVE : GLOBAL FUNCTIONS!
    function getYoutubeEmbedLink(link) {
        tempLink = link;
        link = link.split('?')[1].split('&');
        var i, item;
        for (i = 0; i < link.length; i++) {
            item = link[0].split('=');
            if (item[0] === 'v') {
                return 'https://www.youtube.com/embed/' + item[1];
            }
            i++;
        }
        return tempLink;
    }

    $(document).ready(function () {

        var msg = '@ViewBag.ErrorMsg'
        var ErrorID = '@ViewBag.ErrorID'
        if (msg != undefined && msg !== "") {
            if (msg == "True")
                ViewMessagePopup("@WatanART.Localization.Resource.DataSavedSuccessfully");
            else
                ViewMessagePopup("@WatanART.Localization.Resource.ErrorOccurred");
        }
        $('#VideoForm').bootstrapValidator();

        if ($('#IsYoutube').is(':checked')) {
            $('#SelectVideoFile').hide();

            $('#YoutubeURL').val('@Model.AttachedFile');

            $('#youtubeBox').show();
            $('#youtubeBox iframe').attr('src', getYoutubeEmbedLink($('#youtubeBox iframe').attr('data-src')));
        }
        else {
            $('#SelectVideoFile').show();

            $('#VideoURL').hide();
            $('#YoutubeURL').val("");
        }


        $('#IsYoutube').click(function (event) {
            if ($('#IsYoutube').is(':checked')) {
                $('#SelectVideoFile').hide();

                $('#VideoURL').show();
               
            }
            else {
                $('#SelectVideoFile').show();

                $('#VideoURL').hide();
            }
        });
    });
    $(document).on('submit', '#VideoForm', function (e) {
        $('#VideoForm').bootstrapValidator();
        e.defaultPrevented();
    });
</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
