    //});

    function Submit() {
        $('#frmForm').bootstrapValidator('validate');

        if ($('#frmForm').has('.has-error').length === 0) {
            submitInsert();
        } else {
            // alert("notvalid");
        }

    }




    function submitInsert() {
        debugger;



        var NameAR = $("#Prod_NameAR").val();
        var NameEN = $("#Prod_NameEN").val();
        var Price = $("#Price").val();

        var Cat_ID = $("#categorysub option:selected").val();
        var Type = $("#Type option:selected").val();
        var Prod_image = $("#hid_Image").val();
        var c = document.getElementById("Prop_count").value;
       
        var count = parseInt(c.toString());
      
        var prop_data = "";
        for (var x = 1; x < count; x++) {
            //var ch = document.getElementById("ch_"+x.toString()).value;
            //if (ch=="on") {
                var Prop_ID = document.getElementById("Prop_"+x.toString()).value;

                var multidrop = document.getElementById("Prop_Data_"+x.toString());

                for (var y = 0; y < multidrop.options.length; y++) {
                    if(multidrop.options[y].selected ==true){
                       // alert(multidrop.options[y].value);
                        prop_data +=Prop_ID+"&"+multidrop.options[y].value+",";
                    }
                }
            //}

        }

        var url = '@Url.Action("Insertajax", "Product")';
        $.ajax({
            url: url,
            data: {
                Prod_NameAR: NameAR, Prod_NameEN: NameEN, Cat_ID: Cat_ID, Prod_image: Prod_image, prop_data: prop_data, Price: Price, Type: Type
                        },


            cache: false,
            type: "POST",
            success: function (data) {

                var dataRes = data;
                if (dataRes > 0) {


                    swal({
                        text: "@WatanART.Localization.Resource.DataSavedSuccessfully ",
                        //timer: 5000
                    }).then(
                       function () {
                           var href = "/Admin/Product/Index/@ViewBag.catID";
                           window.location.href = href;

                       })


                } else {
                    swal("@WatanART.Localization.Resource.ErrorOccurred");
                }


            }
        });


    }








</script>

<script>


    $('#categoryParent').on('change', function () {
      
        var Parentid= $(this).find(":selected").val();
       
        setSubCat(Parentid);
    });


    function setSubCat(id) {
       
        if (id != '' && id != null && id > 0) {
            debugger
            var selected = id;
            // Parent = id;
       
       
            var href2 = '@Url.Action("SubList", "Product")';
            $.ajax({
                url: href2,
                data: { Parent: id },
                cache: false,
                type: "GET",
                contentType: 'application/json; charset=utf-8',

                success: function (data) {
                    $('#categorysub').empty();
                    $("#categorysub").val(0);

                    $("#div_sub").show();
                    if (id==1) {
                        $("#div_type").show();
                    }
                    else
                    {
                        $("#div_type").hidden();

                    }

                    if (data != null) {

                        for (var x = 0; x < data.length; x++) {

                         
                            $('#categorysub').append('<option value="' + data[x].Cat_ID + '">' + data[x].Name + '</option>');
                              

                        }
                   
                    }

                    $('#categorysub').trigger('change');
                    getproperdata(id);
                },
                error: function (reponse) {
                    $('#categorysub').empty();
                    $("#categorysub").val(0);
                    $('#categorysub').trigger('change');
                    $('#categorysub').append('<option selected disabled>Select</option>');
                }
            });


        }

    }
      
  
</script>

