 
@model IEnumerable<WatanART.BLL.ViewModels.UserObjVM>

@{
    ViewBag.Title = "Send Notfaction";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var count = 0;

}

<div id="ribbon">
    <span class="ribbon-button-alignment">
        <span id="refresh" class="btn btn-ribbon" data-action="resetWidgets" data-title="refresh" rel="tooltip" data-placement="bottom" data-original-title="<i class='text-warning fa fa-warning'></i> Warning! This will reset all your widget settings." data-html="true">
            <i class="fa fa-refresh"></i>
        </span>
    </span>
    <!-- breadcrumb -->
    <ol class="breadcrumb">
        <li><a href="../../admin/Shared/Index">@WatanART.Localization.Resource.MenuHome</a></li>
        <li>@WatanART.Localization.Resource.Notification</li>
    </ol>
</div>
<div id="content">
    <!-- widget grid -->
    <section id="widget-grid" class="">
        <!-- START ROW -->
        <div class="row">
            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget" id="wid-id-4" data-widget-editbutton="false" data-widget-custombutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>@WatanART.Localization.Resource.Notification </h2>

                    </header>
                    <!-- widget div-->
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body">
                            <div class="form-group" id="replay">
                                <div class="col-md-12">
                                    <ul class="media-list">
                                        <li class="media">

                                            <div class="media-body">
                                                <textarea class="form-control todo-taskbody-taskdesc" style="width:500px" id="messagetext" placeholder="Type comment..." rows="2"></textarea>
                                            </div>
                                        </li>
                                    </ul>
                                    <button class="btn btn-primary" style="float:left" onclick="sendNotify();" type="button"> &nbsp; ارسال &nbsp; </button>
                                </div>
                            </div>

                            <hr />
                           
                            @if (Model != null && Model.Count() > 0)
                            {
                                <table  class="table table-striped table-bordered table-hover table-checkable order-column" id="datatable_tabletoolsNew">
                                    <thead>
                                        <tr>
                                            @*<th>
                            <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">
                                <input type="checkbox" class="group-checkable" data-set="#sample_1 .checkboxes" />
                                <span></span>
                            </label>
                        </th>*@
                                            <th>#</th>
                                            <th> @WatanART.Localization.Resource.FullName </th>
                                            <th> @WatanART.Localization.Resource.EMail</th>
                                            <th> @WatanART.Localization.Resource.PhoneNumber </th>

                                            <th><input type='checkbox' onchange='SelectAllTogglegroups();' checked id='select_allgroups' /></th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            count++;
                                            <tr class="odd gradeX">

                                                <td>@count </td>
                                                <td>
                                                    @item.FullName
                                                </td>
                                                <td>
                                                    @item.Email
                                                </td>
                                                <td>
                                                    @item.Phone
                                                </td>


                                                <td class='code'><input type='checkbox' checked value="@item.UserID" /></td>



                                                @*<td>
                                <a class="btn btn-success btn-large delete" href="/Admin/SalesOfficer/Update/@item.ID">
                                    <i class="icon-docs"></i> @Resource.edit
                                </a>

                                <a class="btn btn-success btn-large" href="/Admin/SalesOfficer/Trace/@item.ID">
                                    <i class="icon-settings"></i> تتبع البائع
                                </a>



                                @Html.HiddenFor(modelItem => item.ID, new { @class = "ID" })
                            </td>*@
                                            </tr>
                                        }



                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <p> لا يوجد داتا</p>
                            }

                        </div>
                        <!-- end widget content -->

                    </div>
                    <!-- end widget div -->

                </div>
                <!-- end widget -->
            </article>
            <!-- END COL -->
        </div>
        <!-- END ROW -->
    </section>
    <!-- end widget grid -->
</div>


<script>

    function SelectAllTogglegroups() {
        debugger;
        var table = $('#datatable_tabletoolsNew').dataTable();
        var total_rows = table.fnGetData().length;
        var filtered_rows = table.$('tr');
        filtered_rows.find("td.code").each(function (i, row) {
            var $actualrow = $(row);
            if ($('#select_allgroups').is(':checked')) {
                var $checkbox = $actualrow.find(':checkbox').prop("checked", true);
            }
            else {
                var $checkbox = $actualrow.find(':checkbox').prop("checked", false);
            }
        });
    }


    function sendNotify() {
        debugger;

        var replaytext = $("#messagetext").val();
        if (replaytext == '0' || replaytext == '' || replaytext.length == 0) {
            swal("من فضلك ادخل الرساله ");
            return false;
        }

        var arrStudentsID = [];
        var check = 0;
        var table = $('#datatable_tabletoolsNew').dataTable();
        var total_rows = table.fnGetData().length;
        var filtered_rows = table.$('tr');
        filtered_rows.find("td.code").each(function (i, row) {
            debugger;
            var $actualrow = $(row);
            var $checkbox = $actualrow.find(':checkbox:checked').val();
            if ($checkbox != undefined) {
                debugger;
                var obj = { "Userid": $checkbox, "TYPE": 2 }
                arrStudentsID.push(obj);
                check += 1;
            }
        });
        if (!(check > 0)) {
            swal("من فضلك اختر من البائعين", " ", "warning");
            return false;
        }




        var Message = $("#messagetext").val();
        var url = '@Url.Action("SendPushNotification", "Advertisement")';
        var StudentGroupParam = { 'UserList': arrStudentsID, 'Message': Message };
        $.ajax({
            url: url,
            contentType: "application/json",
            data: JSON.stringify(StudentGroupParam),
            cache: false,
            type: "POST",
            success: function (data) {
                debugger;
                if (data == 1) {
                    swal("تم الإرسال بنجاح", " ", "success");
                    $("#messagetext").val('');
                }
                else {
                    swal(" حدث خطا ", " ", "error");
                }
            }
        });
    }

</script>