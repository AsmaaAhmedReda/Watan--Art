
@using Microsoft.AspNet.Identity

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOffAdmin", "Account", new { area = "" }, FormMethod.Post, new { @class = "btn-header transparent pull-right", id = "logoutForm" }))
    {
        @Html.AntiForgeryToken()
        <div id="logout" class="btn-header transparent pull-right">
            <span> <a href="javascript:document.getElementById('logoutForm').submit()" title="@WatanART.Localization.Resource.LogOut" data-action="userLogout" data-logout-msg="@WatanART.Localization.Resource.ConfirmSignOut"><i class="fa fa-sign-out"></i></a> </span>
        </div>
    }
}


