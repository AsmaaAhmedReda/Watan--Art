@{
    Layout = "~/Views/Shared/_WebSiteLayout.cshtml";
    ViewBag.Title = "Home Page";
    var count = 0;
    var CanvasCount = 0;
    var CanvasCount2 = 0;
    var sliderCount = 0;
}
<style>
     /* start scroll up */
            #scroll-top {
                text-align: center;
                position: fixed;
                right: 25px;
                bottom: 25px;
                z-index: 9999;
                display: none;
                cursor: pointer;
                -webkit-transition: all .3s ease;
                -moz-transition: all .3s ease;
                -o-transition: all .3s ease;
                transition: all .3s ease;
                background-color: #f5a43b;
                padding: 10px 25px;
                border-radius: 5px;
            }
            #scroll-top:hover{background-color: #e09029}
            #scroll-top a{color: #fff;font-weight: bold;text-decoration: none}
            #scroll-top a:hover,#scroll-top a:focus{text-decoration: none}
            /* end scroll up */
</style>
@*<div id="scroll-top">
    <a href="@Url.Action("Makeorder","Home")">@WatanART.Localization.Resource.MakeOrderNow</a>
</div>*@
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        @foreach (var item in ViewBag.Slider as List<WatanART.BLL.ViewModels.ModulesVM>)
        {
            var activeClass = "";
            if (sliderCount == 0)
            {
                activeClass = "active";
            }
            else
            {
                activeClass = "";
            }
            <div class="carousel-item @activeClass" style="background:url(@Url.Content("~/UploadedImages/"+@item.ModuleImage)) no-repeat;">

                <div class="carousel-caption">
                    
                    <div class="data">
                        <p>@WatanART.Localization.Resource.homemessage</p>
                        @*<div>
                            <a href="@Url.Action("Makeorder","Home")" class="btn btn-primary">@WatanART.Localization.Resource.MakeOrderNow</a>
                        </div>*@
                    </div>
                </div>

            </div>
            sliderCount++;
        }
    </div>


    <div class="carousel-links">
        <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
            <i class="fa fa-chevron-circle-left" aria-hidden="true"></i>
        </a>
        <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
            <i class="fa fa-chevron-circle-right" aria-hidden="true"></i>
        </a>
    </div>
</div>




@if (ViewBag.HomeData as WatanART.BLL.ViewModels.IntroVM != null)
{
    var homedata = ViewBag.HomeData as WatanART.BLL.ViewModels.IntroVM;
<section class="video" id="video">
    <div class="container">
        <h3 class="section-title d-flex align-items-center justify-content-center">@WatanART.Localization.Resource.Video</h3>
        <iframe src="@homedata.IntroVideowebsite"></iframe>

    </div>
</section>
<section class="share">
    <div class="container">
        <h3 class="d-flex align-items-center justify-content-center share-title">@WatanART.Localization.Resource.Share</h3>
        <ul class="social-icons d-flex justify-content-center list-unstyled">
            <li>
                @*<a href=""><i class="fa fa-facebook"></i></a>*@
                <a id="shareFB" href="https://www.facebook.com/sharer/sharer.php?u=URLENCODED_URL&t=TITLE" onclick="javascript:window.open(this.href, '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=300,width=600');return false;" target="_blank" title="Share on Facebook"><i class="fa fa-facebook"></i></a>
            </li>
            <li class="share-twitter"><a href="http://twitter.com/intent/tweet?url=@homedata.IntroVideowebsite" onclick="javascript:window.open(this.href, '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=300,width=600');return false;" target="_blank" title="Twitter"><i class="fa fa-twitter"></i></a></li>
            @*<li>
                <a href=""><i class="fa fa-instagram"></i></a>
            </li>*@
        </ul>
    </div>
</section>

<script type="text/javascript">document.getElementById("shareFB").setAttribute("href", "https://www.facebook.com/sharer/sharer.php?u=" + '@homedata.IntroVideowebsite');</script>
<section class="Shapes" id="shapes">
    <div class="container">
        <h3 class="section-title d-flex align-items-center justify-content-center">@WatanART.Localization.Resource.Shapes</h3>
        <div class="shapes-imgs">
            <div class="row">      
                @foreach (var item in ViewBag.Shapes as List<WatanART.BLL.ViewModels.ModulesVM>)
                {
                    <div class="col-md-6">
                        <img class="img-fluid" src="@Url.Content("~/UploadedImages/"+@item.ModuleImage)">
                    </div>
                }
             
            </div>
        </div>
        <h4>
            @homedata.IntrowebTitle
        </h4>
        <p>
            @Html.Raw(homedata.IntrowebText)
         
        </p>
        
        @*<p>Gift buyer :</p>
        <ul>
            <li><a href="">Download free app  </a></li>
            <li>
                <a href="">
                    Provide photos and create a handmade meaningful
                    .gift in seconds
                </a>
            </li>
            <li><a href="">.Free international shipping  </a></li>
        </ul>*@
    </div>
</section>


<section class="features" id="features">
    <div class="container">
        <h3 class="section-title d-flex align-items-center justify-content-center">@WatanART.Localization.Resource.features</h3>
        <div class="features-icons">
            <div class="row">
                @foreach (var item in ViewBag.FEATURES as List<WatanART.BLL.ViewModels.ModulesVM>)
                {
                    <div class="col-md-3">
                        <img class="img-fluid" onclick="showDetails(@item.ModuleID)" src="@Url.Content("~/UploadedImages/"+@item.ModuleImage)">
                        <p>@item.Title</p>
                    </div>
                }
             
            </div>
        </div>
    </div>
</section>

<section class="mesh" id="spec">
    <div class="container">
        <h3 class="section-title d-flex align-items-center justify-content-center">@WatanART.Localization.Resource.WatanBoard</h3>
        <div class="mesh-slider">
            <div id="myCarousel-2" class="carousel slide carousel-fade" data-ride="carousel">
                <div class="row">
                    <div class="col-md-10">
                        <div class="carousel-inner">
                            @foreach (var item in ViewBag.MeshCanvas as List<WatanART.BLL.ViewModels.MeshPrintVM>)
                            {
                                var activeClass = "";
                                if (CanvasCount == 0)
                                {
                                    activeClass = "active";
                                }
                                else
                                {
                                    activeClass = "";
                                }
                                <div class="carousel-item @activeClass">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="myCarousel-2-img" style="background:url(@Url.Content("~/UploadedImages/"+item.IntroImage)) no-repeat;">
                                            </div>
                                        </div>
                                        <div class="col-md-8">
                                            <div class="container">
                                                <div class="carousel-caption text-left">
                                                    <p>
                                                        @item.IntroText
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                CanvasCount++;
                            }

                        </div>
                    </div>
                    <div class="col-md-2">
                        <ol class="carousel-indicators">
                            @foreach (var item in ViewBag.MeshCanvas as List<WatanART.BLL.ViewModels.MeshPrintVM>)
                            {
                                var activeClass = "";
                                if (CanvasCount2 == 0)
                                {
                                    activeClass = "active";
                                }
                                else
                                {
                                    activeClass = "";
                                }
                                <li data-target="#myCarousel-2" data-slide-to="@CanvasCount2" class="@activeClass"></li>
                                CanvasCount2++;
                            }
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        </div>
</section>
<section class="slider-3d" id="photos">
    <div class="container">
        <h3 class="section-title d-flex align-items-center justify-content-center">@WatanART.Localization.Resource.Photos</h3>
        <div class="slider">
            @if (homedata.ImageList.Count > 0)
            {
                for (int i = 0; i < homedata.ImageList.Count; i++)
                {
                    if (count == 0)
                    {

                        <img width="100%" height="100%" src="@Url.Content("~/UploadedImages/" + @homedata.ImageList[i])" class="left" />
                    }
                    else if (count == 1)
                    {
                        <img width="100%" height="100%" src="@Url.Content("~/UploadedImages/" + @homedata.ImageList[i])" class="center" />
                    }
                    else if (count == 2)
                    {
                        <img width="100%" height="100%" src="@Url.Content("~/UploadedImages/" + @homedata.ImageList[i])" class="right" />
                    }
                    else
                    {
                        <img width="100%" height="100%" src="@Url.Content("~/UploadedImages/" + @homedata.ImageList[i])" />
                    }

                    count++;
                }
            }
        </div>
        </div>
</section>


}



<script>
    function showDetails(featureID)
    {
        window.location = '/Home/Features?featureID=' + featureID;
    }

  
</script>